<resources>

    <!-- Base application theme. -->
    <style name="Theme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ImagineButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/ImgButtHeight</item>
        <item name="android:layout_weight">@dimen/ImgButtWeight</item>
    </style>

    <style name="BottomNavigationView_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <!-- Now Playing style -->
    <style name="NowplayingImgViewStyle">
        <item name="android:layout_width">@dimen/NowplayingImgViewStyle_width</item>
        <item name="android:layout_height">@dimen/NowplayingImgViewStyle_height</item>
        <item name="android:layout_marginTop">@dimen/NowplayingImgViewStyle_layMarginTop</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:contentDescription">TODO</item>
    </style>

    <style name="NowplayingButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginBottom">@dimen/NowplayingButtonStyle_marginBottom</item>
    </style>

    <style name="NowplayingSeekbarStyle">
        <item name="android:layout_width">@dimen/NowplayingSeekbarStyle_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginBottom">@dimen/NowplayingSeekbarStyle_marginBottom</item>
    </style>

    <style name="NowplayingTextStyleOne">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_margin">@dimen/NowplayingTextStyleOne_margin</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/NowplayingTextStyleOne_textSize</item>
    </style>

    <style name="NowplayingTextStyleTwo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_above">@+id/imageViewdis</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/NowplayingTextStyleTwo_textSize</item>
    </style>


    <!-- Library styles -->

    <style name="LibraryLinearLayout_thumb">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/LibraryLinearLayout_thumb_padding</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginRight">@dimen/LibraryLinearLayout_thumb_marginRight</item>
    </style>

    <style name="LibraryLinearLayout_thumb_img">
        <item name="android:layout_width">@dimen/LibraryLinearLayout_thumb_img_width</item>
        <item name="android:layout_height">@dimen/LibraryLinearLayout_thumb_img_height</item>
    </style>

    <style name="LibraryTextStyleOne">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/LibraryTextStyleOne_textSize</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">sans</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="LibraryTextStyleTwo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/LibraryTextStyleTwo_textSize</item>
    </style>

</resources>